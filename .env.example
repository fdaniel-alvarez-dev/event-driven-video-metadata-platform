# Local mock mode defaults (no AWS creds required)
APP_ENV=local
LOG_LEVEL=INFO

# Auth (demo-grade, for showcase only)
AUTH_USERNAME=demo
AUTH_PASSWORD=demo
JWT_SECRET=change-me-in-prod
JWT_ISSUER=edvmp

# API
API_HOST=0.0.0.0
API_PORT=8000

# Storage (MinIO)
S3_ENDPOINT_URL=http://minio:9000
S3_PUBLIC_ENDPOINT_URL=http://localhost:9000
S3_REGION=us-east-1
S3_BUCKET=videos
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin

# Event bus + queues (Redis)
REDIS_URL=redis://redis:6379/0
REDIS_EVENTS_STREAM=events
REDIS_JOBS_QUEUE=jobs
REDIS_DLQ=dlq

# Worker behavior
WORKER_CONCURRENCY=1
WORKER_MAX_ATTEMPTS=3
WORKER_BACKOFF_SECONDS=1.0

# Bedrock (mock-first)
BEDROCK_MODE=mock
BEDROCK_MODEL_ID=anthropic.claude-3-sonnet-20240229-v1:0

# Observability
PROMETHEUS_NAMESPACE=edvmp
